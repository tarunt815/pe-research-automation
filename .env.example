# n8n Configuration
N8N_HOST=https://your-instance.n8n.cloud
N8N_API_KEY=your-n8n-api-key
N8N_USERNAME=admin
N8N_PASSWORD=password

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/research_reports
DB_HOST=localhost
DB_PORT=5432
DB_NAME=research_reports
DB_USER=research_user
